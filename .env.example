# Core configuration
DATABASE_URL=postgresql://tpa:tpa@127.0.0.1:5432/tpa

# LLM Configuration (Ollama defaults)
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://127.0.0.1:11434
LLM_MODEL=gpt-oss:20b
LLM_MODEL_VLM=qwen3-vl:30b
EMBED_MODEL=qwen3-embedding:8b
# Set to true to bypass LLM for testing (uses template text)
DISABLE_LLM=false

# Proxy Configuration
PROXY_BASE_URL=http://127.0.0.1:8082
PROXY_INTERNAL_TOKEN=change-me-to-long-random-string
ALLOW_ON_DEMAND_FETCH=true
ALLOWED_SOURCES_PATH=apps/proxy/allowed_sources.yml
TIMEOUT_SECONDS=60

# Kernel
TIMEOUT_SECONDS=60
LOG_DIR=./logs/traces

# Frontend
VITE_KERNEL_URL=http://127.0.0.1:8081
# Set to true to disable circuit breaker for local dev (allows infinite retries)
VITE_DISABLE_CIRCUIT_BREAKER=true

# Proxy (used by proxy when forwarding to kernel)
KERNEL_BASE_URL=http://127.0.0.1:8081
